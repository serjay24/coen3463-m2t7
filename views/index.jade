extends layout

block content

  .parallax-container.bg.valign-wrapper
    .parallax
      img(src='images/service-home.jpg')
    .container.center.white-text.valign.hide-on-med-and-down
      h2= name
      h5(style= 'text-transform: uppercase')= description

    .container.center.white-text.hide-on-large-only#homeBanner
      h2= name
      h5(style= 'text-transform: uppercase')= description

  .section.transparent.white-text
    h4
      | IT Problem? ~ LET'S fixIT.
    .section
      p
        | This is the goal.

  .row.orange
    h5.black-text We offered the following services:
    .section
      .col.s12.m12.l3
        .card.black
          .card-content.orange-text.center
            i.fa.fa-wrench.large.center
            .card-title= services[0].name
          .card-content.orange-text
            p= services[0].description
          .card-content.center
            a.waves-effect.waves-light.btn-flat.service-button.black.orange-text
              | View Service

      .col.s12.m12.l3
        .card.black
          .card-content.orange-text.center
            i.fa.fa-code.large.center
            .card-title= services[1].name
          .card-content.orange-text
            p= services[1].description
          .card-content.center
            a.waves-effect.waves-light.btn-flat.service-button.black.orange-text
              | View Service