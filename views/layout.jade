doctype html
html
  head
    title= title

    // Compiled and minified CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css')
    // Import Google Icon Font
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    //Import Google Font - Ubuntu
    link(href='https://fonts.googleapis.com/css?family=Ubuntu|Ubuntu+Mono' rel='stylesheet')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // Import Font Awesome Icons
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel= 'stylesheet', type= 'text/css', href= 'stylesheets/style.css')
    link(rel= 'icon', href= 'images/wrench.png')
  
  body

    // Navigation bar of the website
    nav.black
      .nav-wrapper
        a.brand-logo.hide-on-small-only(href= '/')
          img(src='images/logo.jpg')
        
        a.brand-logo.hide-on-med-and-up(href= '/')
          img(src= 'images/wrench.png')

        a.button-collapse(href='#', data-activates='mobile-demo')
          i.material-icons menu
        ul#nav-mobile.right.hide-on-med-and-down
          li#homeLink
            a.onHover.waves-effect(href='/')
              i.fa.fa-home.left.small
              | Home
          li
            a.onHover.waves-effect(href='#3')
              | Services
          li
            a.onHover.waves-effect(href= '/contact')
              | Contact Us

        ul#mobile-demo.side-nav.black
          li
            a.white-text.waves-effect.waves-orange(href='/')
              i.fa.fa-home.left.small.white-text
              | Home
          li
            a.white-text.waves-effect.waves-orange(href='#3')
              i.fa.fa-wrench.left.small.white-text
              | Services
          li
            a.white-text.waves-effect.waves-orange(href='/contact')
              i.fa.fa-phone.left.small.white-text
              | Contact Us

    .parallax-container.bg
      .parallax
        img(src= bannerImage)
      .container.center.white-text.hide-on-med-and-down#homeBanner
        h2= name
        h5(style= 'text-transform: uppercase')= description

      .container.center.white-text.hide-on-large-only#homeBanner-med
        h2= name
        h5(style= 'text-transform: uppercase')= description

    // Content of the Website
    block content

    // Footer of the website
    footer.page-footer.orange
      .container
        .row
          p.black-text.text-lighten-4.center
            | Created by 
            b
              a.link(href= 'http://coen3463-m1t7.herokuapp.com/member/delRosario.html', target= '_blank') Rish Joy Del Rosario
            |  and 
            b
              a.link(href= 'http://coen3463-m1t7.herokuapp.com/member/ilaga.html', target='_blank') Serjay Ilaga
            | .
            |         This project can be found on 
            b GitHub
          .container.center
            a.waves-effect.waves-light.btn-flat.center.black.white-text(href= 'https://github.com/serjay24/coen3463-m2t7', target= '_blank', style= 'text-transform: capitalize')
              i.fa.fa-github-alt.left.small
              | GitHub Project
      .footer-copyright.orange.lighten-1.black-text
        .row.center
          .col.s2.m4.l4.hide-on-small-only Software Engineering
          .col.s12.m4.l4.hide-on-small-only
            b © 2016 - COEN3463
          .col.s12.hide-on-med-and-up.truncate
            b © 2016 - COEN3463 - Software Engineering
          .col.s2.m4.l4.hide-on-small-only Engr. Gino Tria

    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js')
    script(type='text/javascript', src='javascripts/scripts.js')
    script(type='text/javascript', src='javascripts/jquery.matchHeight.js')
